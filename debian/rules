#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	dh_auto_build -- prefix=/usr world

override_dh_auto_install:
	dh_auto_install -- prefix=$(CURDIR)/debian/faust/usr

override_dh_compress:
	dh_compress -X.h -X.cc -X.lib -X.dsp -X.pd -X.maxpat -X.mid -X.txt -XMakefile -XREADME

override_dh_strip:
	dh_strip -Xosclib/libOSCFaust.a -Xosclib/liboscpack.a -Xosclib/*/libOSCFaust.a -Xosclib/*/liboscpack.a -Xfaust/ios-libsndfile.a

override_dh_shlibdeps:
	dh_shlibdeps -Xfaust/osclib/libOSCFaust.so* -Xfaust/osclib/*/libOSCFaust.so*
